<% layout('layouts/boilerplate')%>
    <h1 style="text-align:center">Edit User Profile</h1>
    <div class="container d-flex justify-content-center align-items-center mt-5">
        <div class="row">
            <div class=" col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">
                    <div class="card-body">
                        <form action="/users/<%=user._id%>?_method=PUT" method="POST" novalidate class="validated-form"
                            enctype="multipart/form-data">
                            <div class="mb-3">
                                <label class="form-label" for="username">Username</label>
                                <input class="form-control" type="text" id="username" name="username"
                                    placeholder="Enter username" value="<%=user.username %>" required>
                                <div class="invalid-feedback">
                                    Please enter a username!
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="password">Password</label>
                                <input class="form-control" type="password" id="password" name="password"
                                    placeholder="Enter password" value="<%=user.password %>" required>
                                <div class="invalid-feedback">
                                    Please enter a password!
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="firstName">First Name</label>
                                <input class="form-control" type="firstName" id="firstName" name="firstName"
                                    placeholder="Enter first name" value="<%=user.firstName %>" required>
                                <div class="invalid-feedback">
                                    Please enter a first name!
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="lastName">Last Name</label>
                                <input class="form-control" type="lastName" id="lastName" name="lastName"
                                    placeholder="Enter last name" value="<%=user.lastName %>" required>
                                <div class="invalid-feedback">
                                    Please enter a last name!
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="email">Email</label>
                                <input class="form-control" type="email" id="email" name="email"
                                    placeholder="Enter email" value="<%=user.email %>" required>
                                <div class="invalid-feedback">
                                    Please enter a valid email!
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="bio">Bio</label>
                                <textarea rows="5" class="form-control" type="bio" id="bio" name="bio"
                                    placeholder="Enter bio" required><%=user.bio %></textarea>
                                <div class="invalid-feedback">
                                    Please enter a bio! (it can be a short bio)
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="form-file custom-file">
                                    <input type="file" class="form-file-input" id="avatarImage" name="avatarImage">
                                    <label class="form-file-label" for="avatarImage">
                                        <span class="form-file-text custom-file-label">Replace avatar...</span>
                                        <span class="form-file-button">Browse</span>
                                    </label>
                                </div>
                            </div>
                            <div class="mb-3 userProfileUpdateButton">
                                <button class="btn btn-success" style="margin: 0 auto; display: block;">Update
                                    profile</button>
                            </div>
                        </form>
                        <form>
                            <button class="btn btn-primary" style="margin: 0 auto; display: block;"
                                formaction="/users/<%=user._id%>">Back to user profile
                            </button>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>